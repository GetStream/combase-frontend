{
  "name": "electron",
  "version": "0.1.0",
  "private": true,
  "main": "main/index.js",
  "homepage": "./",
  "publishConfig": {
    "access": "restricted"
  },
  "engines": {
    "node": ">=15.x"
  },
  "author": {
    "name": "smetham.dev",
    "email": "luke@smetham.dev",
    "url": "https://smetham.dev"
  },
  "build": {
    "appId": "dev.smetham.app",
    "productName": "smetham.dev",
    "copyright": "Copyright Â© 2020 smetham.dev",
    "mac": {
      "category": "public.app-category.productivity",
      "darkModeSupport": true,
      "type": "development"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "dependencies": {
    "concurrently": "^6.0.2",
    "esm": "^3.2.25",
    "fontfaceobserver": "^2.1.0",
    "rc-scrollbars": "^1.1.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "styled-components": "^5.2.3"
  },
  "scripts": {
    "start:web": "craco start",
    "start": "concurrently \"BROWSER=none yarn start:web\" \"wait-on http://localhost:3000 && electron . --inspect\"",
    "build:web": "craco build",
    "build": "electron-builder build -m",
    "test": "craco test",
    "eject": "craco eject",
    "postinstall": "electron-builder install-app-deps",
    "preelectron-pack": "yarn build"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.14.0",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-transform-runtime": "^7.13.15",
    "@babel/preset-env": "^7.14.0",
    "@babel/preset-react": "^7.13.13",
    "@babel/register": "^7.13.16",
    "@craco/craco": "^6.1.2",
    "concurrently": "^6.0.0",
    "electron": "12.0.7",
    "electron-builder": "^22.10.5",
    "electron-reloader": "^1.2.1",
    "eslint": "^7.25.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "wait-on": "^5.3.0"
  }
}
