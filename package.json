{
    "name": "combase",
    "description": "",
    "version": "0.0.1",
    "license": "MIT",
    "private": true,
    "scripts": {
        "prep": "find . -type f -name \"package.json\" ! -path \"*/node_modules/*\" -execdir yarn --silent \\;",
        "lint": "eslint . --ext .js --fix",
        "start:electron-web": "yarn workspace electron start:web",
        "start:electron": "yarn workspace electron start",
        "start:web": "yarn workspace web start",
        "storybook": "yarn workspace storybook start",
        "test:unit": "jest",
        "test:unit:watch": "jest --watch",
        "ui:build": "yarn workspace @combase.app/ui build",
        "widget:build": "yarn workspace @combase.app/widget build"
    },
    "workspaces": {
        "packages": [
            "electron",
            "packages/*",
            "storybook",
            "web"
        ],
        "nohoist": [
            "**/electron-builder",
            "**/electron-builder/**",
            "**/electron-webpack",
            "**/electron-webpack/**"
        ]
    },
    "lint-staged": {
        "*.{js,json,md,yml}": [
            "yarn lint"
        ]
    },
    "resolutions": {
        "babel-loader": "8.1.0",
        "jest": "26.6.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.13.16",
        "@babel/core": "^7.14.0",
        "@babel/eslint-parser": "^7.13.14",
        "@babel/plugin-proposal-object-rest-spread": "^7.13.8",
        "@babel/plugin-transform-runtime": "7.4.4",
        "@babel/preset-env": "^7.14.1",
        "@babel/preset-react": "^7.13.13",
        "@rollup/plugin-replace": "^2.4.2",
        "@testing-library/jest-dom": "^5.12.0",
        "@testing-library/react": "^11.2.6",
        "@testing-library/react-hooks": "^5.1.2",
        "@testing-library/user-event": "^13.1.8",
        "babel-eslint": "^10.1.0",
        "babel-plugin-import": "^1.13.3",
        "babel-plugin-module-resolver": "^4.1.0",
        "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
        "dotenv": "^8.2.0",
        "eslint": "^7.25.0",
        "fast-glob": "^3.2.5",
        "fs-extra": "^10.0.0",
        "husky": "^6.0.0",
        "jest": "^26.6.3",
        "jest-haste-map": "^26.6.2",
        "jest-resolve": "^26.6.2",
        "jest-styled-components": "^7.0.4",
        "lerna": "^4.0.0",
        "lint-staged": "^10.5.4"
    }
}
